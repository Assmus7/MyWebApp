@using MyWebApp.Models;
@model List<Student>


@{
    ViewBag.Title = "List of students";
}

<h2>List of students</h2>

@Html.ActionLink("Rerister new", "AddStudent")

<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            FirstName
        </th>
        <th>
            LastName
        </th>
        <th>
            Email
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
        <td>
            @Html.ActionLink("Edit", "EditStudent", new {})
            @Html.ActionLink("Detail", "DetailsOfStudent", new { })
            @Html.ActionLink("Delete", "DeleteStudent", new { })
        </td>
        </tr>
    }
</table>

